<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/banner_slider_view_pager"
        android:layout_width="wrap_content"
        android:layout_height="300dp">
    </androidx.viewpager.widget.ViewPager>

    <TextView
        android:layout_marginLeft="24dp"
        android:layout_marginTop="30dp"
        android:id="@+id/textTitle"
        android:textColor="#17103E"
        android:textSize="23sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Traffic Nepal" />

    <TextView
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="4dp"
        android:id="@+id/textSubTitle"
        android:textColor="#B4BAC3"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Follow Traffic Rules" />

    <LinearLayout
        android:layout_marginBottom="24dp"
        android:weightSum="2"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/dnews"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/bgitem"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:clickable="true">

            <ImageView
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/ic_subtitles_black_24dp"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <TextView
                android:layout_marginLeft="16dp"
                android:layout_marginTop="28dp"
                android:id="@+id/textItemThree"
                android:textColor="#17103E"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="News" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dviewevent"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/bgitem"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:clickable="true">

            <ImageView
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/ic_event_black_24dp"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <TextView
                android:layout_marginLeft="16dp"
                android:layout_marginTop="28dp"
                android:id="@+id/textItemTwo"
                android:textColor="#17103E"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Events" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="24dp"
        android:weightSum="2"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/daddevent"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/bgitem"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:clickable="true">

            <ImageView
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/ic_add_box_black_24dp"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <TextView
                android:layout_marginLeft="16dp"
                android:layout_marginTop="28dp"
                android:id="@+id/textItemSix"
                android:textColor="#17103E"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Event"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dlocation"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/bgitem"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:clickable="true">

            <ImageView
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/ic_pin_drop_black_24dp"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <TextView
                android:layout_marginLeft="16dp"
                android:layout_marginTop="28dp"
                android:id="@+id/textItemFour"
                android:textColor="#17103E"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="24dp"
        android:weightSum="2"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/dreport"

            android:orientation="horizontal"
            android:background="@drawable/bgitem"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="80dp"
            android:clickable="true">

            <ImageView
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/ic_report_black_24dp"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <TextView
                android:layout_marginLeft="16dp"
                android:layout_marginTop="28dp"
                android:id="@+id/textItemFive"
                android:textColor="#17103E"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Report" />

        </LinearLayout>



    </LinearLayout>


</LinearLayout>
</ScrollView>